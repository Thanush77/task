{
  "name": "taskflow-client",
  "version": "1.0.0",
  "description": "TaskFlow Frontend Application",
  "scripts": {
    "start": "http-server . -p 3001 -c-1",
    "dev": "live-server --port=3001 --entry-file=index.html",
    "build": "npm run minify-css && npm run minify-js && npm run postbuild",
    "minify-css": "mkdir -p public/css && cleancss -o public/css/styles.min.css css/styles.css",
    "minify-js": "mkdir -p public/js && terser js/*.js -o public/js/app.min.js",
    "lint": "eslint js/*.js",
    "lint:fix": "eslint js/*.js --fix",
    "serve": "python3 -m http.server 3001",
    "validate": "html-validate index.html",
    "postbuild": "mkdir -p public && cp -f index.html public/ && cp -f manifest.json public/ && cp -f sw.js public/ && cp -r images public/ && cp -r assets public/"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "eslint": "^8.53.0",
    "html-validate": "^8.7.3",
    "http-server": "^14.1.1",
    "live-server": "^1.2.2",
    "terser": "^5.19.4"
  },
  "keywords": [
    "task-management",
    "frontend",
    "spa"
  ],
  "author": "Your Name",
  "license": "MIT"
}
